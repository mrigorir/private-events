<div class="row">
 <div class="col-md-6 mx-auto border shadow mt-5 px-5">
    <h2 class="text-center mt-5">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <strong>
          <%= f.label :name, class:'mt-3 mb-2' %>
        </strong>
        <%= f.text_field :name, class: 'form-control', autofocus: true %>
      </div>
      
      <div class="form-group">
        <strong>
          <%= f.label :email, class:'mt-3 mb-2' %>
        </strong>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <strong>
          <%= f.label :password, class:'mt-3 mb-2' %>
        </strong>
         (leave blank if you don't want to change it)
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <strong>
          <%= f.label :password_confirmation, class:'mt-3 mb-2' %>
        </strong>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <strong>
          <%= f.label :current_password, class:'mt-3 mb-2' %>
        </strong>
        <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
      </div>

      <div class="actions d-flex align-items-center justify-content-center mt-4">
        <%= f.submit "Update", class: 'btn btn-dark px-4'%>
      </div>
    <% end %>

    <div class="d-flex align-items-center justify-content-center my-5">
     <div>
        <h3 class="text-center">Cancel my account</h3>
        <div class="d-flex align-items-center justify-content-center mt-3">
          <%= button_to "Cancel my account", registration_path(resource_name), class:'btn btn-dark', data: { confirm: "Are you sure?" }, method: :delete %>
          <%= link_to "Back", :back, class: 'btn btn-secondary', style: 'margin-left: 20px;' %>
        </div>
     </div>
    </div>
  </div>
</div>