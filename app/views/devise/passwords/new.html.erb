<div class="row mt-5"> 
  <div class="col-md-6 mx-auto border shadow p-5">
    <h3 class="mb-3 text-center">Forgot your password?</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <strong>
          <%= f.label :email, class: 'my-2' %>
        </strong>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
      </div>
      <div class="mt-4 d-flex aling-items-center justify-content-center">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-outline-dark' %>
      </div>
    <% end %>
    <div class="d-flex align-items-center justify-content-center mt-5">
      <%= render "devise/shared/links" %> 
    </div>
  </div>
</div>

