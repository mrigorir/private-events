<div class="row mt-5"> 
  <div class="col-md-6 mx-auto border shadow p-5">
    <h2 class="text-center">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <strong>
          <%= f.label :email, class: 'my-2' %>
        </strong>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <strong>
          <%= f.label :password, class: 'my-2' %>
        </strong>
        <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check my-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-3 d-flex align-items-center justify-content-center">
        <%= f.submit "Log in", class: 'btn btn-dark px-4' %>
      </div>
    <% end %>
    <div class="">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
